}
.master-info{
	border-top: 1rpx solid #efefef;
	display: flex;
  font-size: 28rpx;
	justify-content: space-between;
	flex-direction: row;
	align-items: center;
	padding: 30rpx;
	background-color: #fff;
}
.master-info image{
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
}
